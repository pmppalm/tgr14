<!DOCTYPE html>
<html lang="en">
<head>
    <% include ./layouts/head %>
</head>
<body>

<div class="container">
    <br>
    <center>
        <img src="/img/logo.jpg" style="width: 200px; height: 200px;">
        <img src="/img/logo2.png" style="width: 200px; height: 200px;">
    </center>

    <% include ./layouts/flash-message %>

    <center>
        <br>
        <h3 class="display-4">Register TGR 13</h3>
        <br>

        <form class="form-group" method="POST" action="/register">
            <div class="form-group row">
                <label for="username" class="col-md-5 col-form-label text-md-right">Username</label>
                <div class="col-md-2">
                    <input type="text" class="form-control" name="username" style="width: 200px" autofocus >
                </div>
            </div>

            <div class="form-group row">
                <label for="password" class="col-md-5 col-form-label text-md-right">Password</label>
                <div class="col-md-2">
                    <input id="password" class="form-control"  type="password" style="width: 200px" name="password">
                </div>
            </div>
            <div class="form-group row mb-0">
                <div class="col-md-4 offset-md-4">
                    <button type="submit" class="btn btn-success">
                        Register
                    </button>
                </div>
            </div>
        </form>
        <div class="row">
            <div class="col-md-4 offset-md-4">
                <a href="/">back</a>
            </div>
        </div>
    </center>
</div>

<% include ./layouts/body %>
</body>
</html>